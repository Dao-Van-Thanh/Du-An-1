<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="@drawable/boder_black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:src="@drawable/anh_hoa_don"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_hoa_don_ten_mon_an"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Tên món ăn:"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/item_hoa_don_gia_mon_an"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Giá:"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/item_hoa_don_soLuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Số lượng:"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/item_hoa_don_tong_gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Tổng giá:"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/item_hoa_don_ngay_mua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Ngày mua:"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="27dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"/>

</androidx.appcompat.widget.LinearLayoutCompat>